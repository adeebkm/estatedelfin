{
  "version": 2,
  "functions": {
    "api/auth/*.js": {
      "maxDuration": 30
    },
    "api/shop/*.js": {
      "maxDuration": 30
    },
    "api/orders/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "excludeFiles": [
    "lib/**",
    "tailwind.config.js",
    "postcss.config.js"
  ]
} 